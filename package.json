{
  "name": "ng-micro",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:dist": "http-server dist/ng-micro",
    "build": "npm run build:ng-micro && npm run build:client-a && npm run build:client-b",
    "build:ng-micro": "ng build --prod --extraWebpackConfig webpack.extra.js --single-bundle false",
    "build:client-a": "ng build client-a --prod --extraWebpackConfig webpack.extra.js --output-hashing none --single-bundle true",
    "build:client-b": "ng build client-b --prod --extraWebpackConfig webpack.extra.js --output-hashing none --single-bundle true",
    "i18n": "ng xi18n --output-path i18n --i18n-locale de && npm run i18n:code && xliffmerge --profile xliffmerge.json en de",
    "i18n:code": "ngx-extractor -i src/**/*.ts -f xlf -o src/i18n/messages.xlf",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.7",
    "@angular/cdk": "^7.3.3",
    "@angular/common": "^7.2.7",
    "@angular/compiler": "^7.2.7",
    "@angular/core": "^7.2.7",
    "@angular/elements": "^7.2.7",
    "@angular/forms": "^7.2.7",
    "@angular/material": "^7.3.3",
    "@angular/platform-browser": "^7.2.7",
    "@angular/platform-browser-dynamic": "^7.2.7",
    "@angular/router": "^7.2.7",
    "@ngrx/core": "^1.2.0",
    "@ngrx/effects": "^7.3.0",
    "@ngrx/router-store": "^7.3.0",
    "@ngrx/store": "^7.3.0",
    "@ngrx/store-devtools": "^7.3.0",
    "@ngx-translate/i18n-polyfill": "^1.0.0",
    "@webcomponents/custom-elements": "^1.2.1",
    "application": "^0.1.4",
    "core-js": "^2.6.5",
    "document-register-element": "^1.7.2",
    "ngx-build-plus": "^7.7.6",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.4",
    "@angular-devkit/build-ng-packagr": "^0.13.4",
    "@angular/cli": "^7.3.4",
    "@angular/compiler-cli": "^7.2.7",
    "@angular/language-service": "^7.2.7",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "ejs": "^2.6.1",
    "http-server": "^0.11.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^4.7.1",
    "protractor": "~5.4.0",
    "share-loader": "^0.4.0",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.34.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2"
  }
}
